<div class="orange-separator"></div>
<div class="row">
  <div class="sm-col-4 text-center">
    <div class="sm-col-offset-4">
    <%= form_for @podcast, :html => { :multipart => true } do |f|  %>
    <%= f.label :title %> <br> 
    <%= f.text_field :title %> <br>
    <%= f.label :genre %> <br>
    <%= f.select :genre, Podcast::GENRES %> <br> <br>
    <%= f.label :author %> <br>
    <%= f.text_field :author %> <br>
    <%= f.label :mood %> <br>
    <%= f.select :mood, Podcast::MOODS %> <br> 
    <%= f.label :cover_photo %> 
    <%= f.file_field :cover %> <br>
    <%= f.label :audio %> <br>
    <%= f.file_field :audio %>
    <!--<%= f.label :tags!, "Tags (separated by commas dudes!)" %> <br>  -->
    <%= f.text_field :tag_list , placeholder:"Tags (separated by commas!)" , class:"gray-placeholder"%>  
        
        <!-- Sorry i had to take the fun from this file, but it wouldnt fit otherwise haha -->
    <%= f.submit "Upload that shit" %>
  <% end %>
  </div>
  </div>
</div>
