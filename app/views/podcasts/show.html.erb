
<div class="overheard-header">OVERHEARD</div>

<div class="row">
  <div class="col-sm-12" id="menu-bar"> 
    <h1 class="text-center" id="mood-title">
        <div id='back-button-container'>
            <!--<%= image_tag "back.png", class:"header-icon-left", id:"back-button-image"  %>-->
            <img src="../../assets/images/back.png" class="header-icon-left" id='back-button-image'
                 onmouseover="hover(this);" onmouseout="unhover(this);">
            <%= link_to "", root_path, id:"back-button-link" %>
            </div>
        <%= image_tag "addtobook.png", class:"header-icon-right", id:"add-to-book" %>
        <p id="podcast-mood"><%= @podcast.genre.titleize %></p>
      </h1>
  </div>
</div>


<div class="orange-separator"></div>


<div id="background-color-change">
<div class="row">
  <div class="sm-col-12 text-center">
    <%= image_tag @podcast.cover.url(:medium), class: "image-reponsive" %>
  </div>
</div>

<div class="row">
  <div class="sm-col-12 text-center">
    <audio src="<%= @podcast.audio.url%>" controls id="audio">
    </audio>
  </div>
</div>

<div class="row" id ="text-row">
  <div class="sm-col-12 text-center scaler">
            
    <!-- <%= link_to "Back", root_path, class: "btn btn-primary" %>-->
    <!--<h3> <%= @podcast.genre.titleize %> </h3>-->

      <!--<%= link_to "", root_path, id:"mock" %> <!--link overlapping back button on header. see css --> 
      
      <h2 id="title-text"> <%= @podcast.title %> </h2>
      <h3 id = "author-text"><i> <%= @podcast.author %></i> </h3> 
      
  </div>
</div>

<div class="row" id ="content-button-row">
  <div class="sm-col-12 text-center">
      
    <div class="link_cont">  
       <%= image_tag('button_player.png', id:"button_player_left") %>
    <!--<%= link_to "Explore again", podcast_path(@podcast.random_podcast), class: "btn btn-primary btn-lg " %>--> 
      <%= link_to "explore again", podcast_path(@podcast.random_podcast), class:"b_link_left" %>    
    </div>
      <!--<%= image_tag('play_dark.png', id:"play_dark") %> -->
      
      <div class="link_cont">
      <%= image_tag('button_player.png', id:"button_player_right") %> 
    <!--<%= link_to "Dig deeper", podcast_path(@podcast.next_similar_podcast(@authors)), class: "btn btn-primary btn-lg", id: "dip-deeper" %> -->
     <%= link_to "dig deeper", podcast_path(@podcast.next_similar_podcast(@authors)), class:"b_link_right", id: "dip-deeper" %>
          
          </div>
  </div>
</div>

</div>

<%= render "shared/rating_modal" %>



<script>
  jQuery("#author-text").fitText(2.3); // auto-adjust for title and author text
  jQuery("#title-text").fitText(1.4);   // i added a jQuery lib in the javascripts folder
  //jQuery("#author-text").fitText(2.3);
    
    function hover(element) {
    element.setAttribute('src', '../../assets/images/back_red.png');
}
function unhover(element) {
    element.setAttribute('src', '../../assets/images/back.png');
}
    
</script>
    
    
    


